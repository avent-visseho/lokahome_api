# LOKAHOME API Environment Configuration
# Copy this file to .env and fill in the values

# Application
APP_NAME="LOKAHOME API"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# Super Admin (créé automatiquement au démarrage)
SUPERADMIN_EMAIL=admin@lokahome.bj
SUPERADMIN_PASSWORD=Admin@2024!
SUPERADMIN_FIRST_NAME=Super
SUPERADMIN_LAST_NAME=Admin

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# Database (PostgreSQL + PostGIS)
DATABASE_URL=postgresql+asyncpg://lokahome:lokahome@localhost:5432/lokahome
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_EXPIRE=3600

# JWT Authentication
# Generate a secure key: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# AWS S3 / MinIO
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=lokahome
S3_REGION=us-east-1

# FedaPay (Payment Provider)
FEDAPAY_API_KEY=
FEDAPAY_SECRET_KEY=
FEDAPAY_ENVIRONMENT=sandbox
FEDAPAY_WEBHOOK_SECRET=

# Stripe (International Payments)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# Email (SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@lokahome.bj
MAIL_FROM_NAME=LOKAHOME
MAIL_STARTTLS=true
MAIL_SSL_TLS=false

# Twilio SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Firebase (Push Notifications)
FIREBASE_CREDENTIALS_PATH=

# Sentry (Error Tracking)
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
